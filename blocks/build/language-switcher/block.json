{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "brtled/language-switcher",
  "version": "0.1.0",
  "title": "语言切换器",
  "description": "显示可切换语言的按钮",
  "category": "theme",
  "textdomain": "brtled",
  "icon": "translation",
  "attributes": {
    "dropdown": {
      "type": "number",
      "default": 1
    },
    "hide_if_empty": {
      "type": "number",
      "default": 0
    },
    "show_flags": {
      "type": "number",
      "default": 0
    },
    "show_names": {
      "type": "number",
      "default": 1
    },
    "display_names_as": {
      "type": "string",
      "enum": [
        "name",
        "slug"
      ],
      "default": "name"
    },
    "force_home": {
      "type": "number",
      "default": 0
    },
    "hide_if_no_translation": {
      "type": "number",
      "default": 0
    },
    "hide_current": {
      "type": "number",
      "default": 0
    }
  },
  "supports": {
    "html": false,
    "color": {
      "text": true,
      "background": true,
      "link": true
    },
    "typography": {
      "fontSize": true,
      "lineHeight": true
    },
    "spacing": {
      "margin": true
    }
  },
  "editorScript": "file:./index.js",
  "style": "file:./style-index.css",
  "script": "file:./script.js"
}